<div class="login-form-wrapper">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="login-form">
      <h2 class="title">變更個人資料</h2>
      <div class="box">
        <div class="input-field">
          <%= f.email_field :email %>
          <%= f.label :email, 'Email' %>
        </div>
        <div class="input-field">
          <%= f.text_field :name %>
          <%= f.label :name, 'Name' %>
        </div>
        <div class="input-field">
          <%= select :member, :profession, enum_option_pairs(Member, :profession), prompt: '選擇職業類別' %>
          <%= f.label :profession, '專業類別' %>
        </div>
        <div class="input-field">
          <%= f.text_field :work_field %>
          <%= f.label :work_field, '工作領域' %>
        </div>
        <div class="input-field">
          <%= f.text_field :message %>
          <%= f.label :message, '簡述' %>
        </div>
        <div class="input-field">
          <%= f.password_field :password, autocomplete: "off" %>
          <%= f.label :password, '新密碼（若不變更密碼請留空）' %>
        </div>
        <div class="input-field">
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
          <%= f.label :password_confirmation, '確認新密碼（若不變更密碼請留空）' %>
        </div>
        <div class="input-field">
          <%= f.password_field :current_password, autocomplete: "off" %>
          <%= f.label :current_password, '輸入目前密碼' %>
        </div>
        <%= button_tag(type: 'submit', class: "btn green") do %>
          送出更新
        <% end %>
      </div>
    </div>
  <% end %>

</div>
